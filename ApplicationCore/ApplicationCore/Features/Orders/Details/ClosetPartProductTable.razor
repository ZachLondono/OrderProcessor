@using ApplicationCore.Features.Orders.Shared.Domain.Products;
@using ApplicationCore.Features.Orders.Shared.Domain;
@using ApplicationCore.Features.Shared.Components

<div class="overflow-x-auto rounded-md">
    <table class="table-auto">
        <thead class="border-b border-slate-300">
            <tr class="dark:bg-slate-700 dark:text-gray-500">
                <th></th>
                <th class="p-5">#</th>
                <th class="p-5">Qty</th>
                <th class="p-5">Width</th>
                <th class="p-5">Length</th>
                <th class="p-5">SKU</th>
                <th class="p-5">Material</th>
                <th class="p-5">Paint</th>
                <th class="p-5">EB Color</th>
                <th class="p-5">Room</th>
                <th class="p-5">Unit $</th>
                <th class="p-5">Ext. $</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in ClosetParts) {
                <tr>
                    <td>
                        @if (row.IsComplete) {
                            <ToolTip UnderLine="false" Text="Complete" Offset="ToolTip.OffsetSide.Right">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-green-600">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </ToolTip>
                        } else {
                            <ToolTip UnderLine="false" Text="Incomplete" Offset="ToolTip.OffsetSide.Right">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-red-600">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </ToolTip>
                        }
                    </td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@row.ClosetPart.ProductNumber</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@row.ClosetPart.Qty</td>
                    @if (UseInches) {
                        <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@((MarkupString)row.ClosetPart.Width.GetFormatedFraction())"</td>
                        <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@((MarkupString)row.ClosetPart.Length.GetFormatedFraction())"</td>
                    } else {
                        <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@row.ClosetPart.Width.AsMillimeters().ToString("0.00")</td>
                        <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@row.ClosetPart.Length.AsMillimeters().ToString("0.00")</td>
                    }
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@row.ClosetPart.SKU</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@($"{row.ClosetPart.Material.Finish}/{row.ClosetPart.Material.Core}")</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@($"{row.ClosetPart.Material.PaintColor ?? "N/A"}")</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@row.ClosetPart.EdgeBandingColor</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@row.ClosetPart.Room</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@row.ClosetPart.UnitPrice.ToString("$0.00")</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@((row.ClosetPart.UnitPrice * row.ClosetPart.Qty).ToString("$0.00"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {
    
    [Parameter]
    public IEnumerable<ClosetPartRowModel> ClosetParts { get; set; } = Enumerable.Empty<ClosetPartRowModel>();

    [Parameter]
    public bool UseInches { get; set; }

    public class ClosetPartRowModel {
        public required bool IsComplete { get; set ; }
        public required ClosetPart ClosetPart { get; init; }
    }

}
