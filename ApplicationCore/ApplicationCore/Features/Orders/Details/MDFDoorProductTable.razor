@using ApplicationCore.Features.Orders.Shared.Domain.Products;
@using ApplicationCore.Features.Orders.Shared.Domain;

<div class="overflow-x-auto rounded-md">
    <table class="table-auto">
        <thead class="border-b border-slate-300">
            <tr class="dark:bg-slate-700 dark:text-gray-500">
                <th class="p-5">#</th>
                <th class="p-5">Qty</th>
                <th class="p-5">Width</th>
                <th class="p-5">Length</th>
                <th class="p-5">Framing Bead</th>
                <th class="p-5">Edge Detail</th>
                <th class="p-5">Paint</th>
                <th class="p-5">Room</th>
                <th class="p-5">Unit $</th>
                <th class="p-5">Ext. $</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mdfDoor in MDFDoors) {
                <tr>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@mdfDoor.ProductNumber</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@mdfDoor.Qty</td>
                    @if (UseInches) {
                        <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@((MarkupString)mdfDoor.Width.GetFormatedFraction())"</td>
                        <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@((MarkupString)mdfDoor.Height.GetFormatedFraction())"</td>
                    } else {
                        <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@mdfDoor.Width.AsMillimeters().ToString("0.00")</td>
                        <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@mdfDoor.Height.AsMillimeters().ToString("0.00")</td>
                    }
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@mdfDoor.FramingBead</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@mdfDoor.EdgeDetail</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@mdfDoor.PanelDrop</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@(mdfDoor.PaintColor is null ? "N/A" : mdfDoor.PaintColor)</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@mdfDoor.Room</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@mdfDoor.UnitPrice.ToString("$0.00")</td>
                    <td class="whitespace-nowrap p-5 border-b text-center dark:border-slate-500 dark:text-white">@((mdfDoor.UnitPrice * mdfDoor.Qty).ToString("$0.00"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {
    [Parameter]
    public IEnumerable<MDFDoorProduct> MDFDoors { get; set; } = Enumerable.Empty<MDFDoorProduct>();
    [Parameter]
    public bool UseInches { get; set; }
}