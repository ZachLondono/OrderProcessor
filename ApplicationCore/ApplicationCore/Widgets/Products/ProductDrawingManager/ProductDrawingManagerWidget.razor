@using ApplicationCore.Shared.Components
@using static ApplicationCore.Shared.Components.Button;
@using static ApplicationCore.Features.BricsCAD.ImportDXFIntoDrawing;

@if (IsLoading) {

    <div class="text-center mb-4 font-bold text-blue-700">Loading...</div>
    <svg class="animate-spin mx-auto h-12 w-12 text-blue-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-10" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>

} else {

    @if (_error is not null) {
        <div class="text-red-600">
            <h3>@_error.Title</h3>
            <p>@_error.Details</p>
        </div>
    }
    
    <table class="table-auto w-full">
    
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
    
        @if (DrawingRows.Any()) {
    
            <tbody>
                @foreach (var row in DrawingRows) {
                    <tr class="border-b border-slate-300">
                        @if (row.IsBeingEdited) {
                            <td colspan="2" class="py-5">
                                <div class="flex flex-row space-x-1.5">
                                    <InputText class="input-text flex-1" @bind-Value="row.Name"></InputText>
                                    <Button OnClickAsync="() => SaveDrawingChanges(row)" Color="ButtonColor.Primary">Save</Button>
                                    <Button OnClick="() => CancelEditingDrawing(row)" Color="ButtonColor.Secondary">Cancel</Button>
                                </div>
                            </td>
                        } else if (row.IsBeingDeleted) {
                            <td colspan="2" class="py-5">
                                <div class="text-center">
                                    Delete '@row.Name'?
                                    <Button OnClickAsync="() => RemoveDrawing(row)" Color="ButtonColor.Danger">Confirm</Button>
                                    <Button OnClick="() => CancelDeletingDrawing(row)" Color="ButtonColor.Secondary">Cancel</Button>
                                </div>
                            </td>
                        } else {
                            <td class="py-5">@row.Drawing.Name</td>
                            <td class="py-5">
                                <div class="text-center">
                                    <Button OnClickAsync="() => ImportIntoDocument(row.Drawing, ImportMode.New)" Color="ButtonColor.Secondary">Open</Button>
                                    <Button OnClickAsync="() => ImportIntoDocument(row.Drawing, ImportMode.Replace)" Color="ButtonColor.Secondary">Replace</Button>
                                    <Button OnClickAsync="() => UpdateDrawingFromDocument(row.Drawing)" Color="ButtonColor.Secondary">Replace</Button>
                                    <Button OnClick="() => StartEditingDrawing(row)" Color="ButtonColor.Secondary">Edit</Button>
                                    <Button OnClick="() => StartDeletingDrawing(row)" Color="ButtonColor.Danger">X</Button>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
    
        } else {
            
            <tbody>
                <tr>
                    <td colspan="2" class="text-center">No Drawings Attached</td>
                </tr>
            </tbody>
    
        }
    
    </table>
    
    <Button OnClickAsync="AddActiveDrawing" Class="mt-5">Add Active</Button>
    
}