@page "/vendors/{vendorId:guid}"
@using Companies.Vendors.Edit
@using ApplicationCore.Features.OrderList

<h1 class="font-bold text-lg">Vendor Details</h1>

<div class="grid grid-cols-1 gap-5">
    <div>
        <EditVendor VendorId="VendorId" />
    </div>
    <div>
        <h2 class="font-bold text-md text-gray-700">Orders</h2>
        <OrderListWidget VendorId="VendorId" IsSelectable="false" />
    </div>
</div>

@code {

    [Parameter]
    public Guid VendorId { get; set; }

}