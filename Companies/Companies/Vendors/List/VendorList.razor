@using Domain.Services
@inject VendorListViewModel DataContext
@inject NavigationService NavigationService

<table class="table-auto">
    <thead class="border-b border-slate-300">
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>

        @if (DataContext.Error is not null) {
            
            <tr>
                <td class="text-center">
                    <div class="my-5 text-red-600 text-lg">@DataContext.Error.Title</div>
                    <div class="mb-5 text-sm">@((MarkupString)DataContext.Error.Details)</div>
                    <Button Type="button" OnClickAsync="DataContext.LoadVendors" Color="ButtonColor.Primary" Disabled="@DataContext.IsLoading">Refresh</Button>
                </td>
            </tr>

        } else if (DataContext.IsLoading) {
        
            <tr>
                <td class="text-center">
                    <div class="my-5 text-gray-500 text-lg">Loading...</div>
                </td>
            </tr>

        } else if (DataContext.Vendors.Any()) {

            @foreach (VendorListItem vendor in DataContext.Vendors) {
                <tr>
                    <td class="whitespace-nowrap p-5 border-b text-center cursor-pointer hover:underline" @onclick="() => OpenVendor(vendor.Id)">@vendor.Name</td>
                </tr>
            }

        } else {

            <tr>
                <td class="text-center">
                    <div class="my-5 text-gray-500 text-lg">No vendors to show.</div>
                </td>
            </tr>

        }

    </tbody>
</table>


@code {

    protected override async Task OnInitializedAsync() {
        DataContext.OnPropertyChanged += StateHasChanged;
        await DataContext.LoadVendors();
    }

    private void OpenVendor(Guid customerId) {
        NavigationService.NavigateToVendorPage(customerId);
    }

}
