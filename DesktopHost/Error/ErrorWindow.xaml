<Window x:Class="DesktopHost.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopHost"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="118" Width="360">
    <StackPanel>
        <TextBlock Text="{Binding Path=Title}" HorizontalAlignment="Center" />
        <TextBlock Text="{Binding Path=Message}" HorizontalAlignment="Center" />
    </StackPanel>
</Window>
