<Window x:Class="DesktopHost.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:draw="clr-namespace:System.Drawing;assembly=System.Drawing"
        xmlns:local="clr-namespace:DesktopHost"
        mc:Ignorable="d"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Title="Error" Height="118" Width="450">
    <Border Padding="10">
        <StackPanel Margin="30,0,0,30" >
            <TextBlock Text="{Binding Path=Title}" HorizontalAlignment="Left" Margin="0,0,0,20" FontSize="18" FontWeight="Bold" />
            <TextBlock Text="{Binding Path=Message}" HorizontalAlignment="Left" TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</Window>
