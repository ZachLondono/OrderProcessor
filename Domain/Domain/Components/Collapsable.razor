@if (IsHidden) {

    <div @onclick="Toggle" class="cursor-pointer rounded-md py-3 px-10 bg-slate-100 hover:bg-slate-200">

        @Summary

        <div>
            <span class="font-semibold">more</span>
        </div>

    </div>
    
} else {
    
    <div class="rounded-md py-3 px-10 bg-slate-100">

        @Content

        <div class="mt-3">
            <span class="font-semibold cursor-pointer" @onclick="Toggle">Show less</span>
        </div>

    </div>

}
